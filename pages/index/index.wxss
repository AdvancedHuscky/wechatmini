/**index.wxss**/
.temp{
  text-align: center;
  font-size: 200rpx;

  opacity: .8;
}
.desc{
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
}
.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}
.location-wrapper{
  margin-bottom:60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.location{
  display: flex;
  justify-content: center;
  align-items: center
}
.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height:30rpx;
}
.location-text{
  opacity: .5;
}
.location-tips{
  margin-top: 10rpx;
  text-align: center;
  opacity: .5;
}
.weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.postcast{
  margin: 0 auto;
  font-size: 30rpx;
  text-align:center;
  margin-top:40rpx;
}
.weather-wave{
  width: 40rpx;
  height:30rpx;
}
.time-tips{
  margin-left: 5px;
  display: inline-block;
}
.weatherForecast{
  display: flex
}
.forecast-item{
  display: flex;
  height:300rpx;
  flex-direction: column;
  flex-shrink: 0;
  align-items: center;
  justify-content: center;
  margin: 20rpx 30rpx;
  line-height: 42rpx;
}
.forecast-time{
  line-height: 42rpx;
  margin-bottom: 30rpx;
}
.weather-icon{
  width: 90rpx;
  height: 90rpx;
  margin-bottom:30rpx;
}
.day-weather{
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, .1);
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: .5
}
.temp-text{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right
}
.arrow-icon{
  width: 13rpx;
  height: 24rpx
}